<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.model.mdao.ILeavesMapper">
    <insert id="addLeaves" parameterType="com.study.pojo.Leaves">
        INSERT INTO leaves
        <trim prefix="(" suffixOverrides="," suffix=")">
            <if test="lbegin != null">
                lbegin,
            </if>
            <if test="ifinish != null">
                ifinish,
            </if>
            <if test="lreason != null and lreason != ''">
                lreason,
            </if>
            <if test="ltitle != null and ltitle != ''">
                ltitle,
            </if>
            <if test="itype != null and itype != ''">
                itype,
            </if>
        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            <if test="lbegin != null">
                #{lbegin},
            </if>
            <if test="ifinish != null">
                #{ifinish},
            </if>
            <if test="lreason != null and lreason != ''">
                #{lreason},
            </if>
            <if test="ltitle != null and ltitle != ''">
                #{ltitle},
            </if>
            <if test="itype != null and itype != ''">
                #{itype},
            </if>
        </trim>
    </insert>
</mapper>